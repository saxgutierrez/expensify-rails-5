<div class="container">
  <div class="row">
    <div class="total-box col-md-3">
      $200,000
      <span>HOY</span>
    </div>
    <div class="total-box col-md-3">
      $140,000
      <span>AYER</span>
    </div>
    <div class="total-box col-md-3">
      $7,500,000
      <span>ESTE MES</span>
    </div>
    <div class="total-box col-md-3">
      $6,200,000
      <span>MES PASADO</span>
    </div>
  </div>
  <div class="row" style="margin-top: 40px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Últimos 6 Meses</div>
        <div class="panel-body">
          <div id="expenses-chart" style="height: 250px;">
            <%= column_chart @expenses.joins(:type).group('types.name').group_by_month_of_year(:date, format: "%b %y",range: 6.month.ago.midnight..Time.now).count, stacked: true, legend: "bottom" %>           
          </div>
        </div>
      </div>
    </div>
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Día</div>
        <div class="panel-body">
          <div id="daily-expenses-chart" style="height: 250px;"><%= column_chart @expenses.joins(:type).group('types.name').group_by_hour_of_day(:date, format: "%k").count, stacked: true, legend: "bottom", messages: {empty: "No data"} %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="row" style="margin-top: 10px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Categoría</div>
        <div class="panel-body">
          <div id="category-chart" style="height: 250px;"><%= pie_chart @expenses.joins(:category).group('categories.name').count, legend: "bottom", donut: true %></div>
        </div>
      </div>
    </div>
    <div class=" box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Acumulado</div>
        <div class="panel-body">
          <div id="month-acc" style="height: 250px;"><%= area_chart @expenses.group_by_month(:date,range: 1.months.ago.midnight..Time.now).sum(:amount) %>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
