<div id="expense-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4><!-- este title viene de las vistas js.erb -->
      </div>
      <%= form_for @expense, url:{action: "update"}, remote: true do |f| %>
        <div class="modal-body row">
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          
          <div class="form-group col-md-6">
            <label for="">Type</label>
            <%= f.collection_select :type_id, Type.all.order(:name),:id,:name, {include_blank: true}, :class => 'form-control' %>
          </div>

          <div class="form-group col-md-6">
            <label for="">Date</label>
            <%= f.date_field :date, class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <label for="">Concepto</label>
            <%= f.text_field :concept, class: "form-control", placeholder: "" %>
          </div>

          <div class="form-group col-md-6"">
            <label for="">Category</label>
            <%= f.collection_select :category_id, Category.all.order(:name),:id,:name, {include_blank: true}, class: "form-control" %>
          </div>

          <div class="form-group col-md-6"">
            <label for="">Precio del producto</label>
            <%= f.text_field :amount, class: "form-control", placeholder: "" %>
          </div>         
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          <%= f.submit form_button, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->